<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Veterinary Clinic</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <div class="app-container">
    <!-- Sidebar Navigation -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <h1><i class="fas fa-paw"></i> Petmate Clinic</h1>
      </div>
      <nav class="sidebar-nav">
        <a href="/dashboard" class="nav-item <%= title === 'Dashboard' ? 'active' : '' %>">
          <i class="fas fa-home"></i> Dashboard
        </a>
        <% if (typeof user !== 'undefined' && user.role !== 'Doctor') { %>
        <a href="/clients" class="nav-item <%= title === 'Clients' ? 'active' : '' %>">
          <i class="fas fa-users"></i> Clients
        </a>
        <% } %>
        <% if (typeof user !== 'undefined' && user.role !== 'Frontdesk') { %>
        <a href="/patients" class="nav-item <%= title === 'Patients' ? 'active' : '' %>">
          <i class="fas fa-paw"></i> Patients
        </a>
        <% } %>
        <a href="/appointments" class="nav-item <%= title === 'Appointments' ? 'active' : '' %>">
          <i class="fas fa-calendar-alt"></i> Appointments
        </a>
        <% if (typeof user !== 'undefined' && (user.role === 'Admin' || user.role === 'Doctor' || user.role === 'Employee')) { %>
        <a href="/inventory" class="nav-item <%= title === 'Inventory' ? 'active' : '' %>">
          <i class="fas fa-boxes"></i> Inventory
        </a>
        <% } %>
        <% if (typeof user !== 'undefined' && user.role === 'Admin') { %>
        <a href="/invoices" class="nav-item <%= title === 'Invoices' ? 'active' : '' %>">
          <i class="fas fa-file-invoice-dollar"></i> Invoices
        </a>
        <a href="/reports" class="nav-item <%= title === 'Reports' ? 'active' : '' %>">
          <i class="fas fa-chart-bar"></i> Reports
        </a>
        <a href="/audit-logs" class="nav-item <%= title === 'Audit Logs' ? 'active' : '' %>">
          <i class="fas fa-history"></i> Audit Logs
        </a>
        <% } %>
      </nav>

      <!-- User Profile Section -->
      <div class="sidebar-footer">
        <div class="user-profile">
          <div class="user-avatar">
            <i class="fas fa-user-circle"></i>
          </div>
          <div class="user-info">
            <div class="user-name"><%= typeof user !== 'undefined' && user.email ? user.email.split('@')[0] : 'User' %></div>
            <div class="user-role"><%= typeof user !== 'undefined' && user.role ? user.role : 'Staff' %></div>
          </div>
        </div>
        <button class="logout-btn" onclick="handleLogout()">
          <i class="fas fa-sign-out-alt"></i> Logout
        </button>
      </div>
    </aside>

    <!-- Mobile Menu Toggle -->
    <button class="menu-toggle" id="menuToggle">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Main Content -->
    <main class="main-content">
      <%- body %>
    </main>
  </div>

  <script>
    // Mobile menu toggle
    const menuToggle = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');

    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('active');
    });

    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', (e) => {
      if (window.innerWidth <= 768) {
        if (!sidebar.contains(e.target) && !menuToggle.contains(e.target)) {
          sidebar.classList.remove('active');
        }
      }
    });

    // Handle logout
    async function handleLogout() {
      if (confirm('Are you sure you want to logout?')) {
        try {
          const response = await fetch('/api/auth/logout', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
          });

          if (response.ok) {
            window.location.href = '/login';
          } else {
            alert('Logout failed. Please try again.');
          }
        } catch (error) {
          console.error('Logout error:', error);
          alert('An error occurred during logout.');
        }
      }
    }
  </script>
</body>
</html>
